<div class="modal fade" id="contactUsModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Contate-nos!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
        <%= simple_form_for message do |f| %>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :body, as: :text %>
            <%= f.submit %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info purple" data-dismiss="modal">Fechar</button>
        <%= link_to "Enviar", messages_path, class: 'btn btn-info purple inverted', controller: 'messages', action: 'create', method: 'post'%>
      </div>
    </div>
  </div>
</div>