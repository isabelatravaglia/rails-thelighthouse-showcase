<%= simple_form_for(@article) do |f| %>

  <!-- [...] -->

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :photo, as: :file, input_html: { multiple: false } %>
  </div>

  <div class="form-inputs">
    <%= f.association :partner, label: "Autor(a)", collection: Partner.order(:first_name), label_method: :full_name, value_method: :id %>
  </div>

  <!-- insert these three line of code below -->
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>