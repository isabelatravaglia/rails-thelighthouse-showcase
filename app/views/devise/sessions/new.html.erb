<div class="container">
  <div class="row justify-content-center">
    <div class="authbox form-login">
      <h2>Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Login", class: "btn btn-info purple inverted fixwidth" %>
        </div>
      <% end %>
      <div class="auth-links">
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-info gray soft" %>
        <br>
        <br>
        <%= link_to "Reset password", new_password_path(resource_name), class: "btn btn-info gray soft" %>
      </div>
    </div>
  </div>
</div>
