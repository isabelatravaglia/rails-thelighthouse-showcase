<div class="banner--company">
    <div>
        <h1 class="banner__title">Cuide dos que cuidam dos seus clientes</h1>
        <%# <h2 class="banner__subtitle">Escolha</h2> %>
    </div>
</div>
<div class="container text-pic-subban">
    <%# <h1 class="text-pic-subban__title">Para sua Empresa</h1> %>
    <%# <hr class="text-pic-subban__hr"> %>
    <div class="text-pic-subban__text-box-full">
        <p class="text-pic-subban__paragraph">“É com a clareza do propósito que a visão se torna realidade.”
        </p>
        <p class="text-pic-subban__paragraph">James Doty</p>
    </div>
</div>
<div class="subbanner--gray">
  <% @services.order(:id).each_with_index do |service, i| %>
    <% if i.odd?  %>
      <div class="service-card full">
    <% else %>
      <div class="service-card alt full">
    <% end %>
        <div class="meta">
          <div class="photo" style="background-image: url(<%= asset_path service.photo.filename %>)"></div>
          <%# <ul class="details">
            <li class="author"><a href="#">John Doe</a></li>
            <li class="date">Aug. 24, 2015</li>
          </ul> %>
        </div>
        <div class="description">
          <h1><%= service.name %></h1>
          <h2><%#= service.tagline %></h2>
          <p> <%= service.description %></p>
          <br>
            <h2>Formato:</h2>
            <%# service.audiences.each do |audience| %>
              <p><%= service.structure %></p>
            <%# end %>
          <%# <p class="read-more">
            <a href="#">Saiba Mais</a>
          </p> %>
          <% if service.course %>
            <% if service.name == "\"THE\" Workshop - Orientação de Propósito" %>
              <%= link_to "services", class: "btn btn-info green", data: { toggle: 'modal', target: '#workshopContactUsModal'} do %>
                Eu Quero!
              <% end %>
            <% elsif service.name == "Academia de Liderança" %>
              <%= link_to "https://forms.gle/GQK1LR4aagA6wJgi7", class: "btn btn-info green", target: "_blank" do %>
                Inscreva-se já!
              <% end %>
            <% end %>
          <% end %>
        </div>
    </div>
  <% end %>
</div>